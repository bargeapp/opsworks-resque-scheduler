#!upstart
description "Resque scheduler"
respawn

pre-start script

bash << "EOF"
  mkdir -p /var/log/resque
  chown -R deploy /var/log/resque
EOF

end script

exec su - deploy -c 'cd <%= @deploy[:deploy_to] %>/current; VERBOSE=true RAILS_ENV=<%= @deploy[:rails_env] %> <%= @env %> bundle exec rake resque:scheduler >> /var/log/resque/scheduler-<%= @application %>.log 2>&1'

start on runlevel [2345]

stop on runlevel [016]
